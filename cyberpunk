
#include <stdio.h>
int main() {
    int row=4,i,j;
    char letters[]={'L','E','A','P'};
    for (i=0;i<row;i++)
    {
        for(j=0;j<row;j++){
            if (i==j)
            {
                printf("%c",letters[i]);
            }
            else
            {
                printf("*");
            }
        }
        printf("\n");
    }
    return 0;
}
