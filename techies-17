#include <stdio.h>
int main() 
{
char letters[] = {'L', 'E', 'A', 'P'};
int size;
size= sizeof(letters) / sizeof(letters[0]);
    for (int i = 0; i < size; i++) 
    {
        for (int j = 0; j < size; j++) 
        {
            if (i == j) 
            {
                printf("%c ", letters[i]);
            } 
            else
            {
                printf("* ");
            }
        }
        printf("\n");
    }
    return 0;
}
